pipeline {
//    parameters { string(name: 'VERSION', defaultValue: '1.0.5', description: 'nodejs version') }
//    agent { label 'work_station'}
    agent any
    options {
        disableConcurrentBuilds()
        ansiColor('xterm')
    }
    // triggers { pollSCM('* * * * *') }
    // environment {
    //     SSH = credentials('INSTANCE_CREDS')
    // }
    stages
    {
        // stage ('git clone')
        // {
        //     steps
        //     {
        //     git branch: 'main', url: 'https://github.com/ChaitanyaChandra/DevOps.git'
        //     }
        //  }

        stage ('ssh setup')
        {
            steps
            {
            dir('2.ANSIBLE/') {           
                sh "ansible-playbook spec.yml -e 'HOST=localhost' -e 'ROLE=ssh_setup'"
                }
            }
        }


        stage ('parallel stage')
        {
            parallel {
                stage ('ansible version')
                {
                steps
                    {
                    dir('2.ANSIBLE/') {
                        sh 'ansible --version'
                        }                        
                    }
                }
                stage ('ansible ping')
                {
                steps
                    {
                    dir('2.ANSIBLE/') {
                        sh 'ansible -m ping all'
                        }                         
                    }
                }
            }
        }
    }

  post {
    always {
      cleanWs()
    }
  }
}